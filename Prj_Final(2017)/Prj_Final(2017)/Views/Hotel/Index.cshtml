@{
    ViewBag.Title = "Hotel";
    ViewBag.Description =
        @"ma description ici  ";
}
<link href="~/Content/StylePrincipal.css" rel="stylesheet" media="all" type="text/css">
<div id="recherche" class="jumbotron">

    <h1>@ViewBag.Title</h1>
    @{ /* Styles temporaires : éventuellement dans fichier css */  }
    <div>
        <div id="description">
            <p style="text-align:justify">@ViewBag.Description</p>
        </div>
        <div class="form-inline" id="boiteRecherche" style="display:inline-block;">
            <div id="choix" style="margin-left: 5px; display:inline-block;">
                <button type="button" class="btn btn-default" aria-label="Left Align" style="width:50px; margin-top:3px;">
                    <span class="glyphicon glyphicon-plane" aria-hidden="true"></span>
                </button>
                <button type="button" class="btn btn-default" aria-label="Left Align" style="width:50px; margin-top:3px;">
                    <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
                </button>
                <button type="button" class="btn btn-default" aria-label="Left Align" style="width:50px; margin-top:3px;">
                    <span class="glyphicon glyphicon-road" aria-hidden="true"></span>
                </button>
                <button type="button" class="btn btn-default" aria-label="Left Align" style="width:158px; margin-top:3px;">
                    <span class="glyphicon glyphicon-plane" aria-hidden="true"></span>
                    <strong>&nbsp;+&nbsp;</strong>
                    <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
                    <strong>&nbsp;+&nbsp;</strong>
                    <span class="glyphicon glyphicon-road" aria-hidden="true"></span>
                </button>
            </div>
            <br />
            <div style="display:inline-block; margin: 0px 10px 0px 5px;">
                <label class="label label-default" for="txtVilleDepart">Ville Départ</label>
                <br />
                <input class="form-control" id="txtVilleDepart" type="text" placeholder="Ville de départ" style="width: 180px;" />
            </div>
            <div style="display:inline-block; margin: 0px 10px 0px 5px;">
                <label class="label label-default" for="txtVilleArrivee">Ville Destination</label>
                <br />
                <input class="form-control" id="txtVilleArrivee" type="text" placeholder="Ville de destination" style="width: 180px;" />
            </div>
            <br />
            <div style="display:inline-block; margin: 0px 10px 0px 5px;">
                <label class="label label-default" for="txtDateDepart">Date Départ</label>
                <br />
                <input class="form-control" id="txtDateDepart" type="date" style="width: 180px" placeholder="aaaa-mm-jj" required pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}" />
            </div>
            <div style="display:inline-block; margin: 0px 10px 0px 5px;">
                <label class="label label-default" for="txtDateRetour">Date Retour</label>
                <br />
                <input class="form-control" id="txtDateRetour" type="date" style="width: 180px" placeholder="aaaa-mm-jj" required pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}" />
            </div>
            <br />
            <div style="display:inline-block; margin: 0px 10px 0px 5px;">
                <label class="label label-default" for="txtNbAdultes">Adultes</label>
                <br />
                <input class="form-control" id="txtNbAdultes" type="number" placeholder="Nombre d'adultes" style="width: 180px" />
            </div>
            <div style="display:inline-block; margin: 0px 10px 0px 5px;">
                <label class="label label-default" for="txtNbEnfants">Enfants</label>
                <br />
                <input class="form-control" id="txtNbEnfants" type="number" placeholder="Nombre d'enfants" style="width: 180px" />
            </div>
            <br />
            <input class="btn btn-primary btn-lg" id="btnOk" type="button" value="Rechercher" style="margin: 10px 5px 0px 5px;" />
        </div>
    </div>
</div>
@{
    /* Section des articles : Généré dynamiquement dans le futur */
    ViewBag.Image = "[Insérer Image ICI]";

    ViewBag.NomHotel = "Nom Hôtel ici";
    ViewBag.CategorieHotel = "Categorie";
    ViewBag.VilleHotel = "Ville ici";
    ViewBag.AdresseHotel = "Mon Adresse moyennement longue ici";
    ViewBag.TelephoneHotel = "Telephone";
    ViewBag.DescriptionHotel =
        @"Description Description Description Description Description Description
        Description Description Description Description Description Description
        Description Description Description Description Description Description ";

    ViewBag.Prix = "";


    //
}
<div id="conteneurProduits" style="display:inline-block; width:100%;">
    <div class="container" id="produit1" style="border: 1px solid #aaaaaa; border-radius:6px; width:100%; margin-top:10px; padding-bottom:15px;">
        <div style="display:inline-flex; max-width:900px;">
            <div class="img-thumbnail img-responsive" id="sectionImage">
                <p>@ViewBag.Image</p>
            </div>
            <div id="sectionInfo" style="padding: 5px 5px 5px 15px; ">
                <strong>@ViewBag.NomHotel &nbsp;-&nbsp; @ViewBag.CategorieHotel</strong>
                <p>@ViewBag.AdresseHotel &nbsp;-&nbsp; @ViewBag.VilleHotel</p>
                <p>@ViewBag.TelephoneHotel</p>
                <p>@ViewBag.DescriptionHotel</p>
            </div>
        </div>
        <div style="float:right">
            <div id="sectionBouton" style="text-align:right; margin-top:15px;">
                <strong style="display:block; font-size:16px;">@ViewBag.Prix</strong>
                <a href="/Chambre/Chambre" class="btn btn-primary">Sélectionner</a>
            </div>
        </div>
    </div>
</div>